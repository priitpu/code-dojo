{
  "include": [
    "src-gui/main.ts",
    "src-gui/data.ts",
    "src-gui/client/*.ts",
    "src-gui/types/*.ts",
    "src-gui/types/client/*.ts",
    "src-gui/types/worker/*.ts",
    "src-gui/shared/**/*.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "types": [
      "vite-plugin-pwa/vanillajs"
    ]
  }
}
